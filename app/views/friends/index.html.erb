<h1>Friends</h1>

<table class="table table-striped table-hover table-bordered">

  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div id="friends">
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <%= render friend %>
        <% end %>
      <% end %>
    </div>
  </tbody>

</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
